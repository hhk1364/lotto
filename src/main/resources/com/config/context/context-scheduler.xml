<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
	
	<bean id="scheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<!-- 매주 토요일 22시 로또 데이터 가져오기-->
				<ref bean="cronLottoDataTrigger"/>
			</list>
		</property>
	</bean>

	

	<!-- 매주 토요일 22시 로또 데이터 가져오기-->
	<bean id="cronLottoDataTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
	   	<property name="jobDetail" ref="lottoDataSyncCronBean" />
	    <property name="cronExpression" value="0 0 21 ? * SAT *" />
	  <!-- <property name="cronExpression" value="0 32 11 1/1 * ? *" /> -->
	</bean>	

	<bean id="lottoDataSyncCronBean" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- 서비스 구현 객체의 빈 이름을 인자로 줍니다. -->
		<property name="targetObject" ref="ApiScheduler" />
		<!-- 서비스 객체에서 주기적으로 실행될 메소드른 지정합니다. -->
		<property name="targetMethod" value="batchRun" />
		<!-- 동시 실행을 방지합니다. -->
		<property name="concurrent" value="false" />
	</bean>	
   
    <bean id="ApiScheduler" class="com.yoilLotto.api.web.ApiScheduler"></bean>
   
</beans>